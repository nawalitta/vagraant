{% extends "::base.html.twig" %}

{% block title %}RessourceBundle:AffectationRessource:index{% endblock %}

{% block body %}
<h1>Welcome to the AffectationRessource:index page</h1>

      
<div class="container">
    <form>   
      <div class="row">
        <div class="col-sm-4">
          <!--Sidebar content-->
            <div class="form-group">
                <label for="sel1">Liste des activites :</label>
                <select class="form-control" id="activiteId">
                    {% for activiteR in activitesRealise %}
                        <option value="{{activiteR.id}}">{{ activiteR.activite.getDesignation() }} , {{ activiteR.heureDebut|date("H:I")}} - {{ activiteR.heureFin|date("H:I") }}</option>
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn-default">Affecter</button>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="table-responsive">
                <table class ="table">
                    <caption> Liste des ressources</caption>
                    <tr>
                        <th> # </th>
                        <th> Nom ressource </th>
                        <th> A affecter </th>
                    </tr>
                    {% for ressource in ressources %}
                    <tr>
                            <td>{{ ressource.id }} </td>
                            <td> {{ ressource.designation }} </td>
                            <td>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" name="idRessources[]" value="" class="form-check-input">
                                    </label>
                                </div>
                            </td>
                    </tr>
                    {% endfor %}

                </table>
            </div>
        </div>
      </div>
    </form>
</div>
{% endblock %}
