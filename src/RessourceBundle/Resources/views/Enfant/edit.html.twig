{% extends "::base.html.twig" %}

{% block body %}
    <h1>Edition d'un enfant</h1>
    <form method="post">
        <div class="form-group row">
            <label for="example-text-input" class="col-md-4 col-form-label">Prenom</label>
            <div class="col-md-5">
                {{ form_errors(form.prenom) }}
                {{ form_widget(form.prenom) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-md-4 col-form-label">Nom </label>
            <div class="col-md-5">
                {{ form_errors(form.nom) }}
                {{ form_widget(form.nom) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-md-4 col-form-label"> Est Archive </label>
            <div class="col-md-5">
                {{ form_errors(form.estArchive) }}
                {{ form_widget(form.estArchive) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-md-4 col-form-label">Date d'arrivee </label>
            <div class="col-md-5">
                {{ form_errors(form.dateArrive) }}
                {{ form_widget(form.dateArrive) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-md-4 col-form-label">Regime </label>
            <div class="col-md-5">
                {{ form_errors(form.regime) }}
                {{ form_widget(form.regime) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-md-4 col-form-label">Identifiant</label>
            <div class="col-md-5">
                {{ form_errors(form.identifiant) }}
                {{ form_widget(form.identifiant) }}
            </div>
        </div>

        <div class="row">
            <label for="example-text-input" class="col-md-4 col-form-label">Groupe</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" href="">+</button>
                    </span>
                    {{ form_errors(form.groupe) }}
                    {{ form_widget(form.groupe) }}
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 10px">
            <label class="col-md-offset-8 col-md-4">
                <button type="submit" class="btn btn-primary">Ok</button>
            </label>
        </div>
    </form>
{% endblock %}
