{% extends "::base.html.twig" %}

{% block title %}Edition enfant{% endblock %}

{% block body %}
    <h1>Edition d'un enfant</h1>
    <form method="post">
        <div class="form-group row">
            <label for="example-text-input" class="col-md-offset-3 col-md-1 col-form-label">Prenom</label>
            <div class="col-md-5">
                {{ form_errors(form.prenom) }}
                {{ form_widget(form.prenom) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-md-offset-3 col-md-1 col-form-label">Nom</label>
            <div class="col-md-5">
                {{ form_errors(form.nom) }}
                {{ form_widget(form.nom) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-md-offset-3 col-md-1 col-form-label">Est Archive</label>
            <div class="col-md-5">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" name="estArchive" class="form-check-input">
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-md-offset-3 col-md-1 col-form-label">Date d'arrivee</label>
            <div class="col-md-5">
                {{ form_errors(form.dateArrive) }}
                {{ form_widget(form.dateArrive) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-md-offset-3 col-md-1 col-form-label">Regime</label>
            <div class="col-md-5">
                {{ form_errors(form.regime) }}
                {{ form_widget(form.regime) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-md-offset-3 col-md-1 col-form-label">Identifiant</label>
            <div class="col-md-5">
                {{ form_errors(form.identifiant) }}
                {{ form_widget(form.identifiant) }}
            </div>
        </div>

        <div class="row">
            <label for="example-text-input" class="col-md-offset-3 col-md-1 col-form-label">Groupe</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" data-toggle="modal" data-target="#myModal">+</button>
                    </span>
                    {{ form_errors(form.groupe) }}
                    {{ form_widget(form.groupe) }}
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 10px">
            <label class="col-md-offset-8 col-md-4">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </label>
        </div>
        {{ form_row(form._token) }}
    </form>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Ajouter un groupe</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="nom-groupe">Nom du groupe :</label>
                        <input id="nom-groupe" name="input-groupe-nom" class="form-control" autofocus>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary" onclick="ajouterGroupe(document.getElementsByName('input-groupe-nom')[0].value)">Ajouter</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
