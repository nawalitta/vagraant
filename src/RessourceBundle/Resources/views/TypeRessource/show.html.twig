{% extends "::base.html.twig" %}

{% block title %}Voir type ressource{% endblock %}

{% block body %}
    <nav class="navbar navbar-default">
        <div>
            <ul class="nav navbar-nav">
                <li><a href="{{ path('RessourceBundle_TypeRessource_edit',{ 'id': typeRessource.id }) }}"><input
                                type="button" class="btn btn-primary" name="btnAjout" value="Modifier"/></a></li>
                <li><a href="{{ path('RessourceBundle_TypeRessource_delete',{ 'id': typeRessource.id }) }}"><input
                                type="button" class="btn btn-primary" name="btnAjout" value="Supprimer"/></a></li>
            </ul>
        </div>
    </nav>

    <div class="row">
        <div class="col-sm-4">
            <!--Sidebar content-->
            <div class="table-responsive">
                <table class="table">
                    <caption> Informations générals</caption>
                    <tr>
                        <td> Nom de type de ressource :</td>
                        <td> {{ typeRessource.designation }}</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="table-responsive">
                <table class="table">
                    <caption>Liste des ressources</caption>
                    <tr>
                        <th> Ressource id</th>
                        <th> Designation</th>
                        <th> Type Ressource</th>
                    </tr>
                    {% for ressource in typeRessource.ressources %}
                        <tr>
                            {% include 'RessourceBundle:Ressource:preview.html.twig' %}
                        </tr>
                    {% endfor %}
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
