                <div class="col-md-3">
                    {{ form_errors(form.vendrediFin)}}
                    {{ form_widget(form.vendrediFin) }}
                </div>
        </div>
        <div class="form-group row">
            <div class="col-md-offset-4 col-sm-10">
                {{ form_widget(form.ok,{ 'label': 'Enregistrer' }, { 'attr': {'class': 'btn btn-primary btn', 'type': 'button'} }) }}
            </div>
        </div>
    </form>
    {{ form_end(form) }}    
{% endblock %}