{# empty Twig template #}
<div class="row">
    <div class="small-12 columns">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div data-alert class="alert-box {{ type }}">
                    {{ message }}
                    <a href="#" class="close">&times;</a>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>